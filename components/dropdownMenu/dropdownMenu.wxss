.menu_title {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f7f7f7;
  background: #fff;
  padding: 0 20rpx;
}

.nav-child {
  display: flex;
  text-align: center;
  height: 48rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin: 20rpx 0;
}

.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #9b9b9b;
  margin-left: 5px;
  margin-top: 10rpx;
}

.nav-child.active .nav-title {
  color: rgba(63, 81, 181, 1);
}

.nav-child.active .icon {
  border-bottom: 4px solid rgba(63, 81, 181, 1);
  border-top: 0;
  margin-top: 0;
  transition: all .5s;
}

.menu_details_box {
  background: rgba(0, 0, 0, 0.5);
}

.menu_down {
  animation: menuDown 0.5s ease-in both;
}

.menu_up {
  animation: menuUp 0.5s ease-in both;
}

.left_right_container {
  position: absolute;
  width: 100%;
  z-index: 9;
  overflow-y: scroll;
}

.left_right_box {
  display: flex;
  width: 100%;
  max-height: 100%;
}


.left_box {
  width: 40%;
  background: #f7f7f7;
}

.left_item {
  height: 90rpx;
  line-height: 90rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-left: 15rpx;
  font-size: 24rpx;
}

.right_box {
  width: 70%;
  background: #fff;
}

.right_item {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 22rpx;
}


.container {
  position: relative;
  z-index: 9;
  font-size: 14px;
}

.half-right {
  background: #fff;
}

.half-right view {
  border-bottom: 1px solid #f7f7f7;
}

.current_left_select {
  background: #fff;
}

.current_right_select {
  background: #fff;
  color: rgba(63, 81, 181, 1);
  border: 2rpx solid rgba(63, 81, 181, 1);
}

.z-height {
  overflow-y: scroll;
  background: #fff;
  padding-top: 20rpx;
}

.slidowntop {
  display: flex;
  flex-direction: row;
  padding: 20rpx 24rpx 10rpx 24rpx;
}

.emptyall {
  margin-left: 475rpx;
  color: rgba(63, 81, 181, 1);
}

.emptyallright {
  width: 80rpx;
  text-align: center;
}

.endselect {
  width: 350rpx;
  text-align: left;
}

.return {
  margin-left: 200rpx;
  color: rgba(63, 81, 181, 1);
}

.slidowncenter {
  margin-top: 20rpx;
  padding-top: 20rpx;
  padding-left: 24rpx;
  display: flex;
  flex-direction: row;
  align-content: space-between;
  border-top: solid #d1d3d4 1rpx;
}

.slidownbottom {
  margin-top: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.sortitem {
  border-bottom: solid #f7f7f7 1rpx;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

.sortitem.active {
  color: rgba(63, 81, 181, 1);
}

.container_hd {
  width: 100%;
  height: 100%;
  position: absolute;
  overflow-y: scroll;
  background-color: rgba(0, 0, 0, 0.5);
  height: 600rpx;
}

.more_one_level_item {
  margin-bottom: 50rpx;
}

.more_item_title {
  font-size: 28rpx;
  color: rgba(83, 83, 83, 1);
  font-weight: bold;
  margin-bottom: 24rpx;
}

.more_two_level_item {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.two_level_item {
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 28rpx;
  background: rgba(63, 81, 181, 0.08);
  color: rgba(109, 114, 120, 1);
  font-size: 26rpx;
  padding: 0 56rpx;
  margin-right: 24rpx;
  margin-bottom: 20rpx;
}

.btn_group_box {
  width: 100%;
  height: 128rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 36rpx;
  border-top: 2rpx solid #ccc;
  background: #fff;
}

.no_choose_btn {
  width: 232rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: rgba(240, 240, 240, 1);
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: rgba(147, 147, 170, 1);
}

.sure_btn {
  width: 232rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: rgba(63, 81, 181, 1);
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
}

@keyframes menuDown {
  from {
    height: 0;
  }

  to {
    height: calc(100vh - 90rpx);
  }
}

@keyframes menuUp {
  from {
    height: calc(100vh - 90rpx);
  }

  to {
    height: 0;
  }
}